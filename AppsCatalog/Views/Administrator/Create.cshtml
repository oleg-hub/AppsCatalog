@model AppsCatalog.Models.Application

@{
    Layout = "AdminLayout";
}

<h2 class="my-4">Add application</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="Сategory" class="control-label"></label>

                <select asp-for="Сategory" class="form-control" style="height:35px"
                        asp-items="@Html.GetEnumSelectList<AppsCatalog.Models.enums.CategoryType>()"></select>

                <span asp-validation-for="Сategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add new application" class="btn btn-lg btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
